<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.gon.emo.ActionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />

    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLineSample"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="visible"
            >

            <View
                android:id="@+id/vLineSample"
                android:layout_width="200dp"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="#000000"
                />


        </LinearLayout>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/icBottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            layout="@layout/bottom_main"
            android:visibility="visible"
            />

        <include
            android:id="@+id/icTextSub"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            layout="@layout/text_sub"
            android:visibility="gone"
            />

        <include
            android:id="@+id/icPenSub"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            layout="@layout/pen_sub"
            android:visibility="gone"
            />

        <include
            android:id="@+id/icStyleSub"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            layout="@layout/style_sub"
            android:visibility="gone"
            />

    </LinearLayout>



</LinearLayout>

