<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    tools:context="com.gon.emo.ActionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/ivTextColor"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_color"
            android:scaleType="fitCenter"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/ivTextThickness"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_thickness"
            android:scaleType="fitCenter"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/ivTextPlus"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_text_plus"
            android:scaleType="fitCenter"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/ivTextDelete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_delete"
            android:scaleType="fitCenter"
            android:clickable="true"
            />

        <ImageView
            android:id="@+id/ivTextBack"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_back"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:layout_marginHorizontal="50dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llTextSeekBak"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tvSeek"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:text="30"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <SeekBar
            android:id="@+id/sbText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:max="100"
            android:min="10"
            android:progress="30"
            android:thumb="@drawable/img_circle"
            android:visibility="visible"

            />



    </LinearLayout>

</LinearLayout>